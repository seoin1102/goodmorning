<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="verifi">
	<insert id="insert" parameterType="verifivo">
		<![CDATA[
			insert into verification values(null, #{token }, #{email })
		]]>
	</insert>
	<select id="findByToken" parameterType="verifivo" resultType="verifivo" >
		<![CDATA[
			select no,token,email from verification where token=#{token} and email=#{email}
		]]>		
	</select>
</mapper>
